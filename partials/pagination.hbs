<div class="col-md-12">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    {{#if prev}}
                    <li class="page-item">
                        <a class="page-link" href="{{page_url prev}}" aria-label="Previous">
                            <i class="fas fa-angle-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    {{/if}}

                    {{#if next}}
                    <li class="page-item">
                        <a class="page-link" href="{{page_url next}}" aria-label="Next">
                            <i class="fas fa-angle-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </div>
</div>